@model IImportsA.Models.Item
@{
    ViewBag.Title = "Catálogo";
}

 

    <div class="container" style=" width:100%">
        <h3>Destaques</h3>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="height:440px; width:100%;">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li style="background-color:lightgreen" data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li style="background-color:lightgreen" data-target="#myCarousel" data-slide-to="1"></li>
                <li style="background-color:lightgreen" data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <a href="~/Items/Produto?busca=brinco">
                        <h3 style="text-align:center">Brincos</h3>
                        <img src="~/fonts/IMG/brinco1100.jpg" alt="Brincos" style="background-repeat:no-repeat;height:400px; width:50%">
                    </a>
                </div>
                <div class="item">
                    <a href="~/Items/Produto?busca=anel">
                        <h3 style="text-align:center">Anéis</h3>
                        <img src="~/fonts/IMG/anel1077.jpg" alt="Anéis" style="background-repeat:no-repeat;height:400px; width:50%;">

                    </a>
                </div>
                <div class="item">
                    <a href="~/Items/Produto?busca=corrente">
                        <h3 style="text-align:center">Correntes</h3>
                        <img src="~/fonts/IMG/corrente-com-pingente741.jpg" alt="Correntes" style="background-repeat:no-repeat;height:400px; width:400px;">
                    </a>
                </div>
               
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Anterior</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Próximo</span>
            </a>
        </div>
    </div>
 