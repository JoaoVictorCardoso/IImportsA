@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated && User.Identity.GetUserName() == "admin@admin.com")
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="~/Items/Index" title="lista">
                <img src="~/fonts/edit-document.svg" height="24" width="24" />
            </a>
        </li>
        <li>
            <a href="~/Items/Create" title="inserir">
                <img src="~/fonts/handyman-tools.svg" height="24" width="24" />
            </a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"  title="Sair"><img src="~/fonts/sair.png" height="24" width="24" /> </a></li>
    </ul>
    }
}
else if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id ="logoutForm", @class = "nav-right" }))
    {
        @Html.AntiForgeryToken()

        <ul  class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Meu Perfil", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" title="Sair"><img src="~/fonts/sair.png" height="24" width="24"/> </a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrar", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Entrar", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
