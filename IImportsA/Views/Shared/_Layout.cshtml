<!DOCTYPE html>
<html>
<head>
 
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="body-content" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; ">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inove Imports Atacado", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Produtos", "Produto", "Items", new { area = "" }, new { @class = "btn botao" })</li>
                    <li>@Html.ActionLink("Catálogo", "About", "Home", new { area = "" }, new { @class = "btn botao" })</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home", new { area = "" }, new { @class = "btn botao " })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content" style=" width:100%">
        @RenderBody()
        <hr />
        <footer>
            <div class="navbar">
                <div class="container">

                    <span class="icon-bar">
                        &copy; @DateTime.Now.Year - Inove Imports Atacado
                    </span>

                    <a href="">
                        <span class="icon-bar navbar-right" style="margin:10px">
                            <img src="~/fonts/002-facebook.svg" width="32" height="32" />
                        </span>
                    </a>
                    <a href="">
                        <span class="icon-bar navbar-right" style="margin:10px">
                            <img src="~/fonts/001-instagram.svg" width="32" height="32" />
                        </span>
                    </a>
                    <a href="">
                        <span class="icon-bar navbar-right" style="margin:10px">
                            <img src="~/fonts/004-whatsapp.svg" width="32" height="32" />
                        </span>
                    </a>
                    <a href="">
                        <span class="icon-bar navbar-right" style="margin:10px">
                            <img src="~/fonts/005-youtube.svg" width="32" height="32" />
                        </span>
                    </a>
                    <a href="">
                        <span class="icon-bar navbar-right" style="margin:10px">
                            <img src="~/fonts/003-twitter.svg" width="32" height="32" />
                        </span>
                    </a>
                </div>
            </div>
        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
